<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".Login">


    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo" />

    <ImageView
        android:id="@+id/imgTextMB"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/text" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:src="@drawable/car_background2" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/imgTextMB"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="35dp"
        android:autofillHints=""
        android:background="@drawable/radius_textinput"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/edtPassword"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@id/edtEmail"
        android:layout_marginHorizontal="35dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/radius_textinput"
        android:gravity="center_vertical"
        android:hint="Password "
        android:inputType="textPassword"
        android:paddingLeft="20dp" />

    <TextView
        android:id="@+id/txtForgotPass"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/edtPassword"
        android:layout_alignEnd="@id/edtPassword"
        android:layout_marginVertical="10dp"
        android:text="@string/forgot_password"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/txtForgotPass"
        android:layout_marginHorizontal="35dp"
        android:background="@drawable/radius_button_login"
        android:text="@string/login"
        android:textColor="#ffffff"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btnLogin"
        android:layout_alignEnd="@+id/btnLogin"
        android:layout_marginVertical="10dp"
        android:paddingHorizontal="10dp"
        android:text="@string/register_here"
        android:textColor="#297EF0"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtText"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/btnLogin"
        android:layout_marginVertical="10dp"
        android:layout_toStartOf="@id/txtRegister"
        android:text="@string/forgot_password"
        android:textColor="#ffffff"
        android:textSize="18sp" />


</RelativeLayout>