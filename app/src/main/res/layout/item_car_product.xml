        <!--                android:orientation="horizontal">-->


        <ImageView
            android:id="@+id/imgItemCarProduct"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="#5E5E5E"
            android:scaleType="fitXY" />

